<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <!-- Column 1 -->
    <TextView
        android:id="@+id/tab"
        android:layout_width="@dimen/list_view_item_horizontal_tab"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <!-- Column 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/groupIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/list_view_item_horizontal_spacer"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/configuredImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/list_view_item_horizontal_spacer"
                android:src="@drawable/ic_tag_faces_black_18dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/ssid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Column 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/list_view_item_horizontal_spacer"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/levelImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <!-- Column 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/list_view_item_horizontal_spacer"
                        android:text="@string/channel_short_name"
                        android:textColor="@color/channel"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/channel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/list_view_item_horizontal_spacer"
                        android:textColor="@color/channel_number"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/primaryFrequency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/list_view_item_horizontal_spacer"
                        android:textColor="@color/channel"/>

                    <TextView
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/distance"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Row 2 optional -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/channel_frequency_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/list_view_item_horizontal_spacer"
                        android:textColor="@color/channel"/>

                    <TextView
                        android:id="@+id/width"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/list_view_item_horizontal_spacer"
                        android:textColor="@color/channel"/>

                    <TextView
                        android:id="@+id/vendor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/linkSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/list_view_item_horizontal_spacer"
                        android:textColor="@color/connected"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/ipAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/list_view_item_horizontal_spacer"
                        android:textColor="@color/connected"
                        android:textStyle="bold"
                        android:visibility="gone"/>
                </LinearLayout>

                <!-- Row 3 -->
                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="horizontal">-->

                    <!--<ImageView-->
                        <!--android:id="@+id/securityImage"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginRight="@dimen/list_view_item_horizontal_spacer"/>-->

                    <!--<TextView-->
                        <!--android:id="@+id/capabilities"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textColor="@color/security"-->
                        <!--android:textStyle="italic"/>-->
                <!--</LinearLayout>-->
            </LinearLayout>
        </LinearLayout>

        <!-- Row 3 -->
        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal">-->

            <!--<TextView-->
                <!--android:id="@+id/linkSpeed"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginRight="@dimen/list_view_item_horizontal_spacer"-->
                <!--android:textColor="@color/connected"-->
                <!--android:visibility="gone"/>-->

            <!--<TextView-->
                <!--android:id="@+id/ipAddress"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginRight="@dimen/list_view_item_horizontal_spacer"-->
                <!--android:textColor="@color/connected"-->
                <!--android:textStyle="bold"-->
                <!--android:visibility="gone"/>-->
        <!--</LinearLayout>-->
    </LinearLayout>
</LinearLayout>
